generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  ATIVADO
  DESATIVADO
}

enum Role {
  USER
  ADM
}

model Usuarios {
  id Int @id @default(autoincrement())
  nome_completo String
  email String @unique
  telefone String
  senha String
  role Role @default(USER)
  status Status @default(ATIVADO)
  verificado Boolean @default(false)

  @@map("usuarios")
}
